---
import { Picture } from "astro:assets";
import prismImage from "assets/square-triangle-prism.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={prismImage}
      alt="Prism"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Unlock hidden opportunities in your claims data
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Transform your claims and patient data into structured insights that drive financial and clinical impact.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/request-a-demo"
        target="_blank"
        class="flex gap-1 items-center justify-center bg-[#83DACC]"
        rel="noopener">
        <!-- <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" /> -->

        Request a Demo
      </Link>
    </div>
  </div>
</main>
